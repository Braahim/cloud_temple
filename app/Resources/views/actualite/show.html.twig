{% extends 'base.html.twig' %}

{% block meta %}
<meta name="description" content="{{ actualite.meta }}" />
{% endblock %}
{% block body %}
    <div class="main-wrapper">


        <!-- Mirrored from www.cloud-temple.com/lpr-la-palette-rouge-specialiste-europeen-de-la-location-gestion-de-palettes-choisit-cloud-temple-pour-mener-a-bien-un-vaste-projet-de-migration-dans-le-cloud/ by HTTrack Website Copier/3.x [XR&CO'2014], Sat, 16 Oct 2021 12:15:11 GMT -->


        <section class="banner">
            <div class="container">
                <div class="row">
                    <div class="banner__content col-12 col-xl-10">
                        <div class="banner__title">
                            <h1 class="mb-3">
                                {{ actualite.title }}
                                <span class="text-primary">
                                        </span>
                            </h1>
                            <div class="mb-3">
                                <i class="fas fa-clock"></i>&nbsp;Publié le {{ actualite.dateCreation|date("d/m/y") }}
                            </div>
                            <ul class="categories mb-0">
                                <li class="categories__item"><a class="categories__link" href="../category/a-la-une/index.html">A la une</a></li>
                                <li class="categories__item"><a class="categories__link" href="../category/rex/index.html">REX</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="banner__bg img-to-lazy" style="background-position: center center" data-src="{{ asset('assets/img/' ~ actualite.getPhoto()) }}"></div>
        </section>
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-12 col-lg-8">



                        <h3>{{ actualite.subtitle1 }}</h3>
                        <p>{{ actualite.subject }}</p>


                        <br>
                        <h3>{{ actualite.subtitle2 }}</h3>
                        <p>{{ actualite.subject2 }}</p>


                        <br>
                        <h3>{{ actualite.subtitle3 }}</h3>
                        <p>{{ actualite.subject3 }}</p>

                        <div class="row single-footer">
                            <div class="col single-footer__categories">
                            </div>
                            <div class="col single-footer__sharing">
                                <div id="share"></div>
                            </div>
                        </div>

                        <hr/>


                    </div>

                    <div class="col-12 col-lg-3 offset-lg-1">

                        <div class="single__column">
                            <h4>Articles récents</h4>
                            {% for r in recent %}
                            <div class="card card-mini">
                                <div class="card__body">
                                    <div class="font-size-small">
                                        <i class="icon ion-md-calendar mr-2"></i>
                                       {{ r.dateCreation | date('d-m-Y') }}
                                    </div>
                                    <a href="{{ path('actualite_show', { 'id': r.id }) }}" class="text-decoration-none">
                                        <h6 class="mb-0">
                                           {{ r.title }}
                                        </h6>
                                    </a>
                                </div>
                                <div class="card__footer">
                                    <a href="{{ path('actualite_show', { 'id': r.id }) }}" class="read-more">Lire la suite <i class="icon ion-md-arrow-forward"></i></a>
                                </div>
                            </div>
                            {% endfor %}
                        </div>

                    </div>
                </div>
            </div>
        </section>

    </div>


{% endblock %}
