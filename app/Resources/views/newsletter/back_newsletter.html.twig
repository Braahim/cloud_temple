{% extends 'back.html.twig' %}

{% block body %}
    <div class="dashboard-wrapper">
        <div class="dashboard-ecommerce">
            <div class="container-fluid dashboard-content ">
                <h1>Newsletter</h1>


                <div class="row">

                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="card">
                            {% for flashMessage in app.session.flashbag.get('notice') %}

                                <div class="alert alert-success">
                                    {{ flashMessage }}
                                </div>

                            {% endfor %}


                            <div class="card-body">

                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered first">
                                        <thead>
                                        <tr>
                                            <th> ID </th>
                                            <th>Email</th>
                                            <th>Date Ajout</th>
                                            <th>Statut</th>


                                            <th>Actions</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for nl in newsletter %}
                                            <tr>
                                                <td>{{ nl.id }}</td>
                                                <td>{{ nl.email }}</td>
                                                <td>{{ nl.dateAjout|date('Y-m-d') }}</td>

                                                {% if nl.enabled == 1  %}
                                                    <td> Activé </td>
                                                {% else %}
                                                    <td> Désactivé </td>
                                                {% endif %}


                                                <td>
                                                    <ul>
                                                        <li>
                                                            <a href="{{ path('dashboard_newsletter_delete', { 'id': nl.id }) }}">Supprimer</a>
                                                        </li>
                                                        <li>
                                                        {% if nl.enabled == 1  %}
                                                            <a href="{{ path('newsletter_edit', { 'id': nl.id }) }}" onclick="return confirm('Etes vous sûr de vouloir désactiver la newsletter pour cet email ?');">Désactiver</a>
                                                       {% else %}
                                                           <a href="{{ path('newsletter_edit', { 'id': nl.id }) }}" onclick="return confirm('Etes vous sûr de vouloir activer la newsletter pour cet email ?');">Activer</a>
                                                           {% endif %}

                                                           </li>
                                                    </ul>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
